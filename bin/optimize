#!/usr/bin/env bash

# Usage:
#
# $ optimize <path/to/file> [size]

# Dependencies:
#
# * sips
# * jpegtran
# * png

FILE=$1
SIZE=${2:-1200}

if [ -z "$FILE" ]; then
    echo "Missed file"
    exit 1
fi

if [ -n "$SIZE" ]; then
    mapfile -t image_size < <(sips -g pixelWidth -g pixelHeight "$FILE" | grep pixel | grep -o '[0-9]*$')
    if [[ ${image_size[0]} -gt $SIZE || ${image_size[1]} -gt $SIZE ]]; then
        echo "Scale image to max size: $SIZE"
        sips -Z "$SIZE" "$FILE"
    fi
fi

case ${FILE##*.} in
    jpeg|jpg)
        jpegtran -copy none -optimize -progressive -v -outfile "$FILE" "$FILE"
        ;;
    png)
        optipng "$FILE"
        ;;
    *)
        echo "Unsupported file: $FILE"
        exit 1
esac
